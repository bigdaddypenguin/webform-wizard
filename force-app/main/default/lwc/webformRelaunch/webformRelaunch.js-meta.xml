<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>60.0</apiVersion>
  <isExposed>true</isExposed>

  <targets>
    <!-- Internal Lightning record pages -->
    <target>lightning__RecordPage</target>

    <!-- Experience Cloud pages -->
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>

  <targetConfigs>
    <!-- Limit object for internal record pages -->
    <targetConfig targets="lightning__RecordPage">
      <objects>
        <object>Webform_Instance__c</object>
      </objects>
    </targetConfig>

    <!-- Expose design-time property ONLY for Experience Builder -->
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="recordId"
        type="String"
        label="Record Id"
        description="Webform Instance record Id to load"/>
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>
